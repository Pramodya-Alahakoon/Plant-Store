<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Sorting Options -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort by"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <RadioGroup
            android:id="@+id/sortRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/sortLowToHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: Low to High"/>

            <RadioButton
                android:id="@+id/sortHighToLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: High to Low"/>

            <RadioButton
                android:id="@+id/sortNewest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Newest"/>

            <RadioButton
                android:id="@+id/sortCustomerRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Rating"/>

            <RadioButton
                android:id="@+id/sortMostPopular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Most Popular"/>
        </RadioGroup>

        <!-- Filter by Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter by"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"/>

        <!-- Rating Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <RadioGroup
            android:id="@+id/ratingGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rating1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐ 1.0"/>

            <RadioButton
                android:id="@+id/rating2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐ 2.0"/>

            <RadioButton
                android:id="@+id/rating3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐ 3.0"/>

            <RadioButton
                android:id="@+id/rating4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐ 4.0"/>

            <RadioButton
                android:id="@+id/rating5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐ 5.0"/>
        </RadioGroup>

        <!-- Color Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"/>

        <RadioGroup
            android:id="@+id/colorGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/colorWhite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/white"
                android:button="@android:color/transparent"/>

            <RadioButton
                android:id="@+id/colorBlue"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/blue"
                android:button="@android:color/transparent"/>

            <RadioButton
                android:id="@+id/colorPink"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/pink"
                android:button="@android:color/transparent"/>

            <RadioButton
                android:id="@+id/colorYellow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/yellow"
                android:button="@android:color/transparent"/>

            <RadioButton
                android:id="@+id/colorGreen"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/green"
                android:button="@android:color/transparent"/>
        </RadioGroup>

        <!-- Pot Type Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pot Type"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:id="@+id/potTypeToggleGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="CERAMIC"
                android:textOn="CERAMIC"
                android:background="@drawable/toggle_selector"/>

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="TERRACOTTA"
                android:textOn="TERRACOTTA"
                android:background="@drawable/toggle_selector"/>

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="PLASTIC"
                android:textOn="PLASTIC"
                android:background="@drawable/toggle_selector"/>
        </LinearLayout>

        <!-- Type Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:id="@+id/typeToggleGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="INDOOR"
                android:textOn="INDOOR"
                android:background="@drawable/toggle_selector"/>

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="OUTDOOR"
                android:textOn="OUTDOOR"
                android:background="@drawable/toggle_selector"/>

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="AIR-PURIFYING"
                android:textOn="AIR-PURIFYING"
                android:background="@drawable/toggle_selector"/>
        </LinearLayout>

        <!-- Apply Filters Button -->
        <Button
            android:id="@+id/applyFilterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply Filters"
            android:backgroundTint="@color/dark_green"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"/>

        <!-- Clear Filters Button -->
        <Button
            android:id="@+id/clearFilterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear Filters"
            android:backgroundTint="@color/gray"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>